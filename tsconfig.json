{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "./hardhat.config.ts",
    "scripts",
    "deploy",
    "tests",
    "typechain/**/*",
    "utils"
  ],
  "files": ["./hardhat.config.ts"]
}
